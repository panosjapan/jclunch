

<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div id="wrap">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" <%= link_to "Lunch Order Admin Panel", admin_orders_path %></a>
        <div class="nav-collapse">
          <ul class="nav">  
		
	<% if current_user && current_user.type == "Admin" %>
			  	<li><%= link_to t('.orders'), admin_orders_path %></li>
				<li><%= link_to t('.users'), admin_users_path %></li>
				<li><%= link_to t('.menus'), admin_menus_path %></li>
				<li><%= link_to t('.categories'), admin_categories_path %></li>			
				<li><%= link_to t('.regions'), admin_regions_path %></li>
				<li><%= link_to t('.departments'), admin_departments_path %></li>
			<% end %>
          </ul>
		<% if current_user && current_user.type == "Admin" %>
		<ul class="nav pull-right">               
	        <li class="divider-vertical"></li>
	        <li style="color:lightblue;margin-top:10px;"><%= current_user.email %></li>
	        <li class="divider-vertical"></li>
	        <li><%= link_to t('.logout'), admin_logout_path %></li>
	      </ul>
	<% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
		Language:
			<%= link_to_unless_current "English", locale: "en" %> |
			<%= link_to_unless_current "Japanese", locale: "jp" %> 
	<% flash.each do |name, msg| %> 
	  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
	    <a class="close" data-dismiss="alert">Ã—</a>
	    <%= msg %>
	  </div>
	<% end %>


    <%= yield %>
</div>
  	
<div class="navbar navbar-fixed-bottom" style="background-color: grey;">
      <div class="container">
        <p! class="navbar-text"><center>	&copy; <%= Date.today %>  Japan Centre Group Ltd.</center></p>
      </div>
    </div>
</div>
</body>
</html>

