

<!DOCTYPE html>
<html>
<head>
  <title>Kitchen Panel</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div id="wrap">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" <%= link_to t('.title'), kitchen_orders_path %></a>
        <div class="nav-collapse">
          <ul class="nav">   	
	<% if current_user && current_user.kind == "Kitchen" %>
			  	<li><%= link_to t('.orders'), kitchen_orders_path %></li>
		<% end %>
          </ul>
		<% if current_user && current_user.kind == "Kitchen" %>
		<ul class="nav pull-right">               
	        <li class="divider-vertical"></li>
	        <li style="color:lightblue;margin-top:10px;"><%= current_user.email %></li>
	        <li class="divider-vertical"></li>
	        <li><%= link_to t('.logout'), kitchen_logout_path %></li>
	 		<li class="divider-vertical"></li>
			<li> <a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html">
			        Language
			        <b class="caret"></b>
			    </a>
			    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
			        <li><a href="<%= request.path %>?locale=en">English</a></li>
			        <li><a href="<%= request.path %>?locale=jp">Japanese</a></li>
			    </ul></li>
	      </ul>
	<% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
	

	
	<% flash.each do |name, msg| %>
	  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
	    <a class="close" data-dismiss="alert">Ã—</a>
	    <%= msg %>
	  </div>
	<% end %>


    <%= yield %>
</div>

<center>	&copy; <%= Date.today %>  Japan Centre Group Ltd.</center>
</div><br/><br/>
</body>
</html>

