<h1>Users</h1>
<%= paginate @users %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Full Name</th>
      <th>Email</th>
 	  <th>Department</th>
	  <th>Type</th>
	  <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.department_name %></td>
		<td><%= user.type %></td>
		<td><%= user.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', admin_user_path(user), :method => :delete, :confirm => 'Are you sure?', :style => 'color: white', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
	<b>Total Users:	<%= User.count %></b><br/><br/>
<%= link_to 'New', new_admin_user_path, :style => 'color: white', :class => 'btn btn-primary' %>