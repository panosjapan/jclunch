<%= simple_form_for [:admin,@user], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>

    <%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :admin, :collection => ['No', 'Yes'], :selected => params[1]  %>
	
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_users_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


