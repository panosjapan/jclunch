
<%= simple_form_for [:admin,@category], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Category</legend>

    <%= f.input :name %>
	<%= f.input :one_lunch, :label => 'One_lunch', :as => :select,  :collection => ['No', 'Yes' ], :selected => params[0] %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_categories_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
