
<h1>Log In</h1>

<%= form_tag admin_sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
<p><%= link_to "forgotten password?", new_password_reset_path %></p>

 <button class="btn btn-primary" type="submit"><%= (t "login") %></button><% end %>