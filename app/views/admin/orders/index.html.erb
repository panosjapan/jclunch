<h1>Orders</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee</th>
      <th>Menu</th>
      <th>Region</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
		<td><%= order.user_name %></td>
        <td><%= order.menu_name %></td>
        <td><%= order.region_name %></td>
        <td><%= order.date %></td>
        <td>
          <%= link_to 'Edit', edit_admin_order_path(order), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', admin_order_path(order), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_admin_order_path, :class => 'btn btn-primary' %>