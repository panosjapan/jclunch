<div class="modal-header">
  <button class="close" data-dismiss="modal">&times;</button>
  <h3><%= @user.full_name %></h3>
</div>
<div class="modal-body">
	<%= simple_form_for @work_record, url: update_with_password_staff_work_record_path(@user,@work_record), :html => { :class => 'form-horizontal' } do |f| %>
		<div class="control-group string required">
			<label class="string required control-label" for="username">
				<abbr title="required">*</abbr> <%= t('simple_form.labels.user.password') %>
			</label>
			<div class="controls">
				<%= password_field_tag :password,nil,:autofocus => true %>
			</div>
		</div>
		<%= f.input :attend_at,minute_step: @step,input_html: {class: 'input-mini'} %>
	  <%= f.input :lunch_start_at, default: @ls, minute_step: @step, input_html: {class: 'input-mini'} %>
	  <%= f.input :lunch_end_at, default: @le, minute_step: @step, input_html: {class: 'input-mini'} %>
		<div class="form-actions">
			<%= f.submit t('helpers.links.update'), :class => 'btn btn-primary' %>
		</div>
	<% end %>
</div>

