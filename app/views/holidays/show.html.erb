<h2>Holiday</h2>

<p>
  <b>Date:</b>
  <%= @holiday.holiday.strftime("%b-%Y") %>
</p>

<div class="form-actions">
  <%= link_to 'Back', holidays_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_holiday_path(@holiday), :class => 'btn' %>
  <%= link_to 'Delete', holiday_path(@holiday), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>