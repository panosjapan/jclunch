<h2>My Lunch History</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Employee</th>
      <th>Menu</th>
      <th>Region</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date %></td>
		<td><%= order.user_name %></td>
        <td><%= order.menu_name %></td>
        <td><%= order.region_name %></td>

        <td>
          <%= link_to 'Edit', edit_order_path(order), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', order_path(order), :method => :delete, :style => 'color: white', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_order_path, :style => 'color: white', :class => 'btn btn-primary' %>
	